{
    "workbench.colorCustomizations": {
        "titleBar.activeBackground": "#5050ff",
        "titleBar.inactiveBackground": "#5050ff",
        "titleBar.activeForeground": "#ffffff",
        "activityBar.activeBackground": "#101085",
        "activityBarBadge.background": "#5050ff",
        "activityBar.inactiveForeground": "#ffffff",
        "activityBar.background": "#5050ff",
        "activityBar.foreground": "#ffffff",
        "statusBar.background": "#5050ff",
        "statusBar.border": "#5050ff",
        "statusBar.foreground": "#ffffff"
    },
    "workbench.colorTheme": "GitHub Dark Dimmed",
    "editor.tabSize": 4,
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/.next": true
    },
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    "eslint.format.enable": true,
    "typescript.tsdk": "node_modules/typescript/lib",
    "[markdown]": {
        "editor.formatOnSave": false,
        "editor.wordWrap": "off"
    },
    "[mdx]": {
        "editor.formatOnSave": false,
        "editor.wordWrap": "off"
    }
}
